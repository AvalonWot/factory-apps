<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_placeholder_person_150" android:layout_centerInParent="true" />
    <ImageView android:id="@id/artist_card_cover_art" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
    <ImageView android:id="@id/gradient" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/overlay_large_strong" />
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/generic_card_padding" android:layout_alignParentBottom="true">
        <TextView android:id="@id/artist_card_artist" android:singleLine="true" style="@style/card_primary_text_large" />
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="0.0px">
            <TextView android:id="@id/artist_card_album_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/num_albums" android:includeFontPadding="false" style="@style/SmallOverlayText" />
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bundle_corner" android:layout_alignParentTop="true" android:layout_alignParentRight="true" />
</RelativeLayout>