<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true">
        <ImageView android:layout_width="@dimen/share_location_pin_width" android:layout_height="@dimen/share_location_pin_height" android:src="@drawable/ic_location_160" android:adjustViewBounds="true" android:alpha="0.4" />
        <TextView android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_location_loading_text" android:maxLines="1" android:singleLine="true" style="@style/LargeOverlayText" />
    </LinearLayout>
    <ImageView android:id="@id/share_location_map_image" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <ImageView android:id="@id/share_location_gradient" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/overlay_medium" android:layout_alignParentBottom="true" android:layout_centerInParent="true" />
    <com.google.glass.widget.SliderView android:id="@id/share_location_loading_slider" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" />
    <com.google.glass.widget.TipsView android:id="@id/share_location_dismiss_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/share_location_dismiss_hint_margin_bottom" android:text="@string/share_location_dismiss_hint" android:layout_alignParentBottom="true" android:layout_centerInParent="true" style="@style/TipsViewText" />
</RelativeLayout>